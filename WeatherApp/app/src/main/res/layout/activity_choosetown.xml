<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityPrimary"
    tools:context=".ChoosetownActivity">

    <TextView
        android:id="@+id/textViewSelectTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/town_selecttown"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/editTextTown"
        app:layout_constraintLeft_toLeftOf="@id/editTextTown"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextTown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorEditView"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ListView
        android:id="@+id/listViewCommonTowns"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorEditView"
        app:layout_constraintTop_toBottomOf="@id/editTextTown"
        app:layout_constraintLeft_toLeftOf="@id/editTextTown" />

    <CheckBox
        android:id="@+id/checkBoxAddInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/town_additionalinfo"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/listViewCommonTowns"
        app:layout_constraintLeft_toLeftOf="@id/listViewCommonTowns" />

    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_accept"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/checkBoxAddInfo"
        app:layout_constraintLeft_toLeftOf="@id/checkBoxAddInfo" />

</android.support.constraint.ConstraintLayout>